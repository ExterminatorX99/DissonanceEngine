{
	"framebuffers": {
		"mainBuffer": {
			"textures": {
				"colorBuffer": {
					"type": "Color",
					"format": "RGBA32f"
				},
				"normalBuffer": {
					"type": "Color",
					"format": "RGBA32f"
				},
				"positionBuffer": {
					"type": "Color",
					"format": "RGB32f"
				},
				"emissionBuffer": {
					"type": "Color",
					"format": "RGB32f"
				},
				"depthBuffer": {
					"type": "DepthStencil",
					"format": "Depth24Stencil8"
				}
			}
		},
		"lightingBuffer": { 
			"textures": {
				"lightingBuffer": {
					"type": "Color",
					"format": "RGBA32f"
				}
			}
		}
	},
	"pipeline": {
		"geometry": {
			"type": "geometry",
			"framebuffer": "mainBuffer"
		},
		"lighting": {
			"type": "lighting",
			"framebuffer": "lightingBuffer",
			"passedTextures": {
				"mainBuffer": ["normalBuffer","positionBuffer","emissionBuffer"]
			},
			"shaders": {
				"point": "LightingPoint",
				"directional": "LightingDirectional",
				"spot": null
			}
		},
		"fxaa": {
			"type": "postprocess",
			"framebuffer": "mainBuffer",
			"passedTextures": {
				"mainBuffer": ["colorBuffer","normalBuffer","positionBuffer","emissionBuffer"]
			},
			"shader": "FXAA"
		},
		"composite": {
			"type": "postprocess",
			"framebuffer": "none",
			"passedTextures": {
				"mainBuffer": ["colorBuffer","emissionBuffer"],
				"lightingBuffer": ["lightingBuffer"]
			},
			"shader": "Composite"
		}
	}
}
